#include<cstdio>
#include<queue>

using namespace std;


int main()
{
	long int N,n;
	long int weight;
	long int sum=0,x,y;
	while(scanf("%d",&N)!=EOF)
	{
		priority_queue <long int,vector<long int>,greater<long int> > S;
		sum=0;
		for(n=0;n<N;n++)
		{
			scanf("%d",&weight);
			S.push(weight);
		}
		while(S.size()!=1)
		{
			x=S.top();
			S.pop();
			y=S.top();
			S.pop();
			sum=(sum+x+y)%1000000007;
			S.push(x+y);
		}
		printf("%ld\n",sum);
	}
	return 0;
}

